<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.MauDe.TuyChonActivity">
    <TableLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow
            android:gravity="center_horizontal"
            android:padding="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_lock_outline_black_24dp"/>
            <Button
                android:src="@drawable/ic_lens_black_24dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Mã đề"
                android:background="@drawable/button_menu"
                android:textColor="@color/white"
                android:id="@+id/buttonCreateCode"/>
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:padding="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_filter_frames_black_24dp"/>
            <Button
                android:src="@drawable/ic_lens_black_24dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Cài đặt"
                android:background="@drawable/button_menu"
                android:textColor="@color/white"
                android:id="@+id/buttonEditBlock"/>
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:padding="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_camera_alt_black_24dp"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Chấm điểm"
                android:background="@drawable/button_menu"
                android:textColor="@color/white"
                android:id="@+id/buttonCamera"/>
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:padding="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_question_answer_black_24dp"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Kết quả"
                android:background="@drawable/button_menu"
                android:textColor="@color/white"
                android:id="@+id/buttonResult"/>
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:padding="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_wallpaper_black_24dp"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Hình Ảnh"
                android:background="@drawable/button_menu"
                android:textColor="@color/white"
                android:id="@+id/buttonStorage"/>
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:padding="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_import_export_black_24dp"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Xuất dữ liệu"
                android:background="@drawable/button_menu"
                android:textColor="@color/white"
                android:id="@+id/buttonExport"/>
        </TableRow>
    </TableLayout>
    <TextView
        android:layout_above="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Designed and Developer by VoThanhHien"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/email"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Hienb1606980@student.ctu.edu.vn"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"/>
</RelativeLayout>

