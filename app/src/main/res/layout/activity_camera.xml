<?xml version="1.0" encoding="utf-8"?>
<com.mxn.soul.flowingdrawer_core.FlowingDrawer
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:edPosition="1"
    app:edMenuSize="280dp"
    app:edMenuBackground="#9F9F9F">
    <!--content-->

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/container_scan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.udayraj.androidomr.activity.ScanActivity">

            <FrameLayout
                android:id="@+id/camera_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <org.opencv.android.JavaCameraView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/java_camera_view"/>

            </FrameLayout>

            <!-- Second layer : Hint text -->
            <LinearLayout
                android:id="@+id/capture_hint_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    style="@style/TextShadow"
                    android:id="@+id/capture_hint_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textColor="#F44336"
                    android:textSize="100sp"
                    android:textFontWeight="30"/>
            </LinearLayout>
            <!-- Third layer: debug buttons-->

            <LinearLayout
                android:id="@+id/debug_row0"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="bottom|end"
                android:gravity="end|bottom"
                android:visibility="gone"
                >
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/xray_btn"
                    app:jtbJelly="lazy_tremble_body_slim_jim"
                    app:jtbDuration="200"
                    app:jtbLeftThumbColor="@color/nen_toggle"
                    app:jtbRightThumbColor="@color/nen_toggle"
                    app:jtbRightBackgroundColor="@color/nen_toggle"
                    app:jtbLeftBackgroundColor="@color/mau_nenseekbar"
                    app:jtbLeftTextColor="@color/white"
                    app:jtbRightTextColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:jtbLeftText="debug"
                    app:jtbLeftTextSize="15sp"
                    app:jtbRightTextSize="15sp"
                    app:jtbTextMarginLeft="2dp"
                    app:jtbTextMarginRight="2dp"
                    app:jtbTextMarginBottom="2dp"
                    app:jtbTextMarginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/check_btn"
                    app:jtbJelly="lazy_tremble_body_slim_jim"
                    app:jtbDuration="200"
                    app:jtbLeftThumbColor="@color/nen_toggle"
                    app:jtbRightThumbColor="@color/nen_toggle"
                    app:jtbRightBackgroundColor="@color/nen_toggle"
                    app:jtbLeftBackgroundColor="@color/mau_nenseekbar"
                    app:jtbLeftTextColor="@color/white"
                    app:jtbRightTextColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:jtbLeftText="check"
                    app:jtbLeftTextSize="15sp"
                    app:jtbRightTextSize="15sp"
                    app:jtbTextMarginLeft="2dp"
                    app:jtbTextMarginRight="2dp"
                    app:jtbTextMarginBottom="2dp"
                    app:jtbTextMarginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/correct_btn"
                    android:visibility="gone"
                    app:jtbJelly="lazy_tremble_body_slim_jim"
                    app:jtbDuration="200"
                    app:jtbLeftThumbColor="@color/nen_toggle"
                    app:jtbRightThumbColor="@color/nen_toggle"
                    app:jtbRightBackgroundColor="@color/nen_toggle"
                    app:jtbLeftBackgroundColor="@color/mau_nenseekbar"
                    app:jtbLeftTextColor="@color/white"
                    app:jtbRightTextColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:jtbLeftText="input"
                    app:jtbLeftTextSize="15sp"
                    app:jtbRightTextSize="15sp"
                    app:jtbTextMarginLeft="2dp"
                    app:jtbTextMarginRight="2dp"
                    app:jtbTextMarginBottom="2dp"
                    app:jtbTextMarginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/flash_btn"
                    app:jtbJelly="lazy_tremble_body_slim_jim"
                    app:jtbDuration="200"
                    app:jtbLeftThumbColor="@color/nen_toggle"
                    app:jtbRightThumbColor="@color/nen_toggle"
                    app:jtbRightBackgroundColor="@color/nen_toggle"
                    app:jtbLeftBackgroundColor="@color/mau_nenseekbar"
                    app:jtbLeftTextColor="@color/white"
                    app:jtbRightTextColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:jtbLeftText="flash"
                    app:jtbLeftTextSize="15sp"
                    app:jtbRightTextSize="15sp"
                    app:jtbTextMarginLeft="2dp"
                    app:jtbTextMarginRight="2dp"
                    app:jtbTextMarginBottom="2dp"
                    app:jtbTextMarginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/start_btn"
                    app:jtbJelly="lazy_tremble_body_slim_jim"
                    app:jtbDuration="200"
                    app:jtbLeftThumbColor="@color/nen_toggle"
                    app:jtbRightThumbColor="@color/nen_toggle"
                    app:jtbRightBackgroundColor="@color/nen_toggle"
                    app:jtbLeftBackgroundColor="@color/mau_nenseekbar"
                    app:jtbLeftTextColor="@color/white"
                    app:jtbRightTextColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:jtbLeftText="start"
                    app:jtbLeftTextSize="15sp"
                    app:jtbRightTextSize="15sp"
                    app:jtbTextMarginLeft="2dp"
                    app:jtbTextMarginRight="2dp"
                    app:jtbTextMarginBottom="2dp"
                    app:jtbTextMarginTop="2dp"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>

            <!-- Fourth (Hidden initially) layer: crop layout-->
            <FrameLayout
                android:id="@+id/crop_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone">

                <!--<ImageView-->
                <!--android:id="@+id/crop_image_view"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_gravity="center" />-->

                <!--<com.udayraj.androidomr.view.TouchImageView-->
                <!--android:id="@+id/crop_image_view"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_gravity="center"-->
                <!--android:scaleType="center"-->
                <!--/>-->

                <!--<com.udayraj.androidomr.view.PolygonView-->
                <!--android:id="@+id/polygon_view"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center" />-->

                <!-- Final layer: Accept Reject Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|center"
                    android:layout_marginBottom="40dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <!--layout_weight is divided only accross 0dp elements - good!-->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        />
                    <ImageView
                        android:id="@+id/crop_reject_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:alpha="0.8"
                        android:src="@drawable/reject" />

                    <TextView
                        android:id="@+id/time_elapsed_text"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:paddingBottom="4dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/finding_rect"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/text_size_18" />
                    <ImageView
                        android:id="@+id/crop_accept_btn"
                        android:contentDescription="@string/default_on_text"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:alpha="0.8"
                        android:src="@drawable/accept" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        />

                </LinearLayout>
            </FrameLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/grey_asbestos">
        </LinearLayout>
        <include
            layout="@layout/capture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
        <include
            layout="@layout/app_bar_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ketquacham"
            android:layout_margin="15dp"
            android:visibility="gone">
            <TableRow
                android:padding="5dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/made"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F36159"
                    android:id="@+id/made"
                    android:textSize="30sp"
                    android:layout_marginLeft="15dp"/>
            </TableRow>
            <TableRow
                android:padding="5dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/sbd"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F36159"
                    android:textSize="30sp"
                    android:id="@+id/sbd"
                    android:layout_marginLeft="15dp"
                    />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ketqua_cham"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F36159"
                    android:textSize="30sp"
                    android:id="@+id/diemso"
                    android:layout_marginLeft="15dp"/>
            </TableRow>
        </TableLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/folder_preview"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/folder"
            android:visibility="gone"/>

    </RelativeLayout>

    <!--menu-->
    <com.mxn.soul.flowingdrawer_core.FlowingMenuLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/container_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                >
                <LinearLayout
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey_asbestos">
                </LinearLayout>
            </LinearLayout>


            <!--Buttons row 1-->
            <LinearLayout
                android:id="@+id/debug_row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|start"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                >
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    app:jtbJelly="lazy_tremble_body_slim_jim"
                    app:jtbDuration="200"
                    app:jtbLeftThumbColor="@color/nen_toggle"
                    app:jtbRightThumbColor="@color/nen_toggle"
                    app:jtbRightBackgroundColor="@color/nen_toggle"
                    app:jtbLeftBackgroundColor="@color/mau_nenseekbar"
                    app:jtbLeftTextColor="@color/white"
                    app:jtbRightTextColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/clahe_btn"
                    app:jtbLeftText="@string/clahe_on"
                    app:jtbRightText="@string/normal"
                    app:jtbLeftTextSize="15sp"
                    app:jtbRightTextSize="15sp"
                    app:jtbTextMarginLeft="2dp"
                    app:jtbTextMarginRight="2dp"
                    app:jtbTextMarginBottom="2dp"
                    app:jtbTextMarginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    />
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/gamma_btn"
                    app:jtbJelly="lazy_tremble_body_slim_jim"
                    app:jtbDuration="200"
                    app:jtbLeftThumbColor="@color/nen_toggle"
                    app:jtbRightThumbColor="@color/nen_toggle"
                    app:jtbRightBackgroundColor="@color/nen_toggle"
                    app:jtbLeftBackgroundColor="@color/mau_nenseekbar"
                    app:jtbLeftTextColor="@color/white"
                    app:jtbRightTextColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:jtbLeftText="@string/gamma_on"
                    app:jtbRightText="@string/normal"
                    app:jtbLeftTextSize="15sp"
                    app:jtbRightTextSize="15sp"
                    app:jtbTextMarginLeft="2dp"
                    app:jtbTextMarginRight="2dp"
                    app:jtbTextMarginBottom="2dp"
                    app:jtbTextMarginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    />
            </LinearLayout>

            <!--Buttons row 2-->
            <LinearLayout
                android:layout_below="@+id/debug_row1"
                android:id="@+id/debug_row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|start"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                >
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/morph_btn"
                    app:jtbJelly="lazy_tremble_body_slim_jim"
                    app:jtbDuration="200"
                    app:jtbLeftThumbColor="@color/nen_toggle"
                    app:jtbRightThumbColor="@color/nen_toggle"
                    app:jtbRightBackgroundColor="@color/nen_toggle"
                    app:jtbLeftBackgroundColor="@color/mau_nenseekbar"
                    app:jtbLeftTextColor="@color/white"
                    app:jtbRightTextColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:jtbLeftText="@string/morph_on"
                    app:jtbRightText="@string/normal"
                    app:jtbLeftTextSize="15sp"
                    app:jtbRightTextSize="15sp"
                    app:jtbTextMarginLeft="2dp"
                    app:jtbTextMarginRight="2dp"
                    app:jtbTextMarginBottom="2dp"
                    app:jtbTextMarginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    />
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/canny_btn"
                    app:jtbJelly="lazy_tremble_body_slim_jim"
                    app:jtbDuration="200"
                    app:jtbLeftThumbColor="@color/nen_toggle"
                    app:jtbRightThumbColor="@color/nen_toggle"
                    app:jtbRightBackgroundColor="@color/nen_toggle"
                    app:jtbLeftBackgroundColor="@color/mau_nenseekbar"
                    app:jtbLeftTextColor="@color/white"
                    app:jtbRightTextColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:jtbLeftText="@string/canny_on"
                    app:jtbRightText="@string/normal"
                    app:jtbLeftTextSize="15sp"
                    app:jtbRightTextSize="15sp"
                    app:jtbTextMarginLeft="2dp"
                    app:jtbTextMarginRight="2dp"
                    app:jtbTextMarginBottom="2dp"
                    app:jtbTextMarginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    />


            </LinearLayout>
            <!--Buttons row 3-->
            <LinearLayout
                android:layout_below="@+id/debug_row2"
                android:id="@+id/debug_row3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|start"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                >
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/hover_btn"
                    app:jtbJelly="lazy_tremble_body_slim_jim"
                    app:jtbDuration="200"
                    app:jtbLeftThumbColor="@color/nen_toggle"
                    app:jtbRightThumbColor="@color/nen_toggle"
                    app:jtbRightBackgroundColor="@color/nen_toggle"
                    app:jtbLeftBackgroundColor="@color/mau_nenseekbar"
                    app:jtbLeftTextColor="@color/white"
                    app:jtbRightTextColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:jtbLeftText="@string/hover_on"
                    app:jtbRightText="@string/normal"
                    app:jtbLeftTextSize="15sp"
                    app:jtbRightTextSize="15sp"
                    app:jtbTextMarginLeft="2dp"
                    app:jtbTextMarginRight="2dp"
                    app:jtbTextMarginBottom="2dp"
                    app:jtbTextMarginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    />
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/contour_btn"
                    app:jtbJelly="lazy_tremble_body_slim_jim"
                    app:jtbDuration="200"
                    app:jtbLeftThumbColor="@color/nen_toggle"
                    app:jtbRightThumbColor="@color/nen_toggle"
                    app:jtbRightBackgroundColor="@color/nen_toggle"
                    app:jtbLeftBackgroundColor="@color/mau_nenseekbar"
                    app:jtbLeftTextColor="@color/white"
                    app:jtbRightTextColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:jtbLeftText="@string/contour_on"
                    app:jtbRightText="@string/normal"
                    app:jtbLeftTextSize="15sp"
                    app:jtbRightTextSize="15sp"
                    app:jtbTextMarginLeft="2dp"
                    app:jtbTextMarginRight="2dp"
                    app:jtbTextMarginBottom="2dp"
                    app:jtbTextMarginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    />
            </LinearLayout>

            <!--Seek Bars-->
            <LinearLayout
                android:layout_below="@+id/debug_row3"
                android:id="@+id/debug_row4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:paddingTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trunc_thresh"

                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:paddingBottom="4dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textColor="@color/text_seekbar"
                        android:textSize="@dimen/text_size_18" />
                    <com.mohammedalaa.seekbar.RangeSeekBarView
                        android:id="@+id/trunc_thresh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:barHeight="@dimen/value_bar_barHeight"
                        app:baseColor="@color/mau_nenseekbar"
                        app:circleRadius="@dimen/value_bar_circleRadius"
                        app:circleTextColor="@color/white"
                        app:circleTextSize="@dimen/value_bar_circleTextSize"
                        app:fillColor="@color/nen_trai"
                        app:currentValue="@string/v_trunc_thresh"
                        app:minValue="50"
                        app:maxValue="255"
                        app:stepValue="5"
                        />
                </LinearLayout>

                <LinearLayout
                    android:paddingTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zero_thresh"

                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:paddingBottom="4dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textColor="@color/text_seekbar"
                        android:textSize="@dimen/text_size_18" />
                    <com.mohammedalaa.seekbar.RangeSeekBarView
                        android:id="@+id/zero_thresh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:barHeight="@dimen/value_bar_barHeight"
                        app:baseColor="@color/mau_nenseekbar"
                        app:circleRadius="@dimen/value_bar_circleRadius"
                        app:circleTextColor="@color/white"
                        app:circleTextSize="@dimen/value_bar_circleTextSize"
                        app:fillColor="@color/nen_trai"
                        app:currentValue="@string/v_zero_thresh"
                        app:minValue="0"
                        app:maxValue="255"
                        app:stepValue="5"
                        />
                </LinearLayout>

                <LinearLayout
                    android:paddingTop="12dp"
                    android:layout_width="match_parent"
