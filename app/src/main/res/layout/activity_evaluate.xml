<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EvaluateActivity">

    <LinearLayout
        android:id="@+id/evaluate_scorell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp">


        <TextView
            android:id="@+id/evaluate_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="___ out of ___"
            android:textColor="@android:color/black"
            android:textSize="14sp"

            />

    </LinearLayout>



    <TextView
        android:id="@+id/evaluate_wrong_answers_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/evaluate_scorell"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="Wrong Answers"
        android:textSize="22sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/evalute_wrong_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/evaluate_wrong_answers_header" />


</RelativeLayout>